bell_msg "^G Bell in window %n"
autodetach on
startup_message off
nonblock on
vbell off
defscrollback 5000

# show command name instead of bash
shelltitle "%|bash"

caption always
hardstatus string "%?%F%{= kG}%:%{= Wk}%? [$USER@%H] %n : %t"

# Always show lastline
#hardstatus alwayslastline
#hardstatus string "%{= kG}[ %{G}${USER}@%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}][%{Y}%l%{g}]%{=b C}%{W}"
caption string "%{= g}[ %{G}${USER}@%H%{g} ][%= %{= w}%?%-Lw%?%{r}(%{W}%n*%f %t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c:%s %{g}][%{Y}%l%{g}]%{=b C}%{W}"

#hardstatus alwayslastline
#hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}][%{Y}%l%{g}]%{=b C}%{W}'

# bind Shift+PgUp/PgDn
bindkey -m "^[[5;2~" stuff ^b
bindkey -m "^[[6;2~" stuff ^f

# Support alternate screens so that, for example, when you
# quit out of vi, the display is redrawn as it was before vi
# redrew the full screen.
altscreen on

bindkey "^[[5~" eval "copy" "stuff ^u"
bindkey "^[[6~" eval "copy" "stuff ^d"

bindkey -m "^[[5~" stuff ^u
bindkey -m "^[[6~" stuff ^d
